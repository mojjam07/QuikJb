rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /jobs/{jobId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == resource.data.postedBy || request.auth.uid == resource.data.assignedUser);
      allow delete: if request.auth != null && request.auth.uid == resource.data.postedBy;
    }
  }
}
